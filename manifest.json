{
  "manifest_version": 2,
  "name": "Twitter Pastel Palettes",
  "description": "Cute pastel color themes for Twitter in Chrome",
  "version": "0.0.0.6",
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Twitter Pastel Palettes",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs",
    "https://twitter.com/*"
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}